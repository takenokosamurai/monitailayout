<Page x:Class="monitailayout.Views.HomePage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
      Background="#ECF0F1"
      Title="ホーム">

    <ScrollViewer VerticalScrollBarVisibility="Auto" Padding="20">
        <StackPanel>
            <!-- ページタイトル -->
            <TextBlock Text="ホーム"
                      Style="{StaticResource MaterialDesignHeadline4TextBlock}"
                      Margin="0,0,0,20"/>

            <!-- ウェルカムカード -->
            <materialDesign:Card Padding="20" Margin="0,0,0,20">
                <StackPanel>
                    <StackPanel Orientation="Horizontal" Margin="0,0,0,10">
                        <materialDesign:PackIcon Kind="Information" 
                                                Width="24" 
                                                Height="24"
                                                VerticalAlignment="Center"
                                                Margin="0,0,10,0"/>
                        <TextBlock Text="ダッシュボード"
                                  Style="{StaticResource MaterialDesignHeadline6TextBlock}"
                                  VerticalAlignment="Center"/>
                    </StackPanel>
                    <TextBlock Text="MonitAI へようこそ。左側のメニューから機能を選択してください。"
                              TextWrapping="Wrap"
                              Opacity="0.7"/>
                </StackPanel>
            </materialDesign:Card>

            <!-- 統計カード -->
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <materialDesign:Card Grid.Column="0" Padding="20" Margin="0,0,10,0">
                    <StackPanel>
                        <materialDesign:PackIcon Kind="ChartLine" 
                                                Width="40" 
                                                Height="40"
                                                HorizontalAlignment="Center"
                                                Foreground="#3498DB"
                                                Margin="0,0,0,10"/>
                        <TextBlock Text="アクティブタスク"
                                  Style="{StaticResource MaterialDesignBody2TextBlock}"
                                  HorizontalAlignment="Center"
                                  Opacity="0.7"/>
                        <TextBlock Text="12"
                                  Style="{StaticResource MaterialDesignHeadline3TextBlock}"
                                  HorizontalAlignment="Center"
                                  Foreground="#3498DB"
                                  Margin="0,5,0,0"/>
                    </StackPanel>
                </materialDesign:Card>

                <materialDesign:Card Grid.Column="1" Padding="20" Margin="5,0,5,0">
                    <StackPanel>
                        <materialDesign:PackIcon Kind="CheckCircle" 
                                                Width="40" 
                                                Height="40"
                                                HorizontalAlignment="Center"
                                                Foreground="#2ECC71"
                                                Margin="0,0,0,10"/>
                        <TextBlock Text="完了タスク"
                                  Style="{StaticResource MaterialDesignBody2TextBlock}"
                                  HorizontalAlignment="Center"
                                  Opacity="0.7"/>
                        <TextBlock Text="48"
                                  Style="{StaticResource MaterialDesignHeadline3TextBlock}"
                                  HorizontalAlignment="Center"
                                  Foreground="#2ECC71"
                                  Margin="0,5,0,0"/>
                    </StackPanel>
                </materialDesign:Card>

                <materialDesign:Card Grid.Column="2" Padding="20" Margin="10,0,0,0">
                    <StackPanel>
                        <materialDesign:PackIcon Kind="Alert" 
                                                Width="40" 
                                                Height="40"
                                                HorizontalAlignment="Center"
                                                Foreground="#E74C3C"
                                                Margin="0,0,0,10"/>
                        <TextBlock Text="注意が必要"
                                  Style="{StaticResource MaterialDesignBody2TextBlock}"
                                  HorizontalAlignment="Center"
                                  Opacity="0.7"/>
                        <TextBlock Text="3"
                                  Style="{StaticResource MaterialDesignHeadline3TextBlock}"
                                  HorizontalAlignment="Center"
                                  Foreground="#E74C3C"
                                  Margin="0,5,0,0"/>
                    </StackPanel>
                </materialDesign:Card>
            </Grid>

            <!-- アクションボタン -->
            <StackPanel Orientation="Horizontal" 
                       HorizontalAlignment="Center" 
                       Margin="0,30,0,0">
                <Button Content="新規作成"
                       Style="{StaticResource MaterialDesignRaisedButton}"
                       Margin="5"
                       Click="NewTask_Click"/>

                <Button Content="更新"
                       Style="{StaticResource MaterialDesignRaisedButton}"
                       Background="{DynamicResource SecondaryHueMidBrush}"
                       Margin="5"
                       Click="Refresh_Click"/>

                <Button Content="エクスポート"
                       Style="{StaticResource MaterialDesignOutlinedButton}"
                       Margin="5"
                       Click="Export_Click"/>
            </StackPanel>
        </StackPanel>
    </ScrollViewer>
</Page>