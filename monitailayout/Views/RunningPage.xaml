<Page x:Class="monitailayout.Views.RunningPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
      Background="#ECF0F1"
      Title="実行中">

    <Grid Margin="40,20">
        <Grid.RowDefinitions>
            <RowDefinition Height="0.5*"/>
            <RowDefinition Height="3*"/>
            <RowDefinition Height="2*"/>
            <RowDefinition Height="0.5*"/>
        </Grid.RowDefinitions>

        <!-- 上部スペース -->
        <Grid Grid.Row="0"/>

        <!-- 目標表示カード -->
        <materialDesign:Card Grid.Row="1"
                            Padding="40" 
                            Margin="0,0,0,20"
                            HorizontalAlignment="Stretch"
                            VerticalAlignment="Stretch"
                            Background="#00897B"
                            materialDesign:ElevationAssist.Elevation="Dp16">
            <Viewbox Stretch="Uniform">
                <StackPanel Width="800">
                    <TextBlock Text="目標"
                              FontSize="28"
                              Foreground="White"
                              Opacity="0.85"
                              FontWeight="Medium"
                              HorizontalAlignment="Center"
                              Margin="0,0,0,25"/>

                    <TextBlock x:Name="GoalText"
                              Text="レポートを完成させる"
                              FontSize="50"
                              FontWeight="Bold"
                              TextWrapping="Wrap"
                              TextAlignment="Center"
                              Foreground="White"
                              LineHeight="56"/>
                </StackPanel>
            </Viewbox>
        </materialDesign:Card>

        <!-- レベルと残り時間を横並び -->
        <Grid Grid.Row="2" Margin="0,0,0,0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="20"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <!-- レベル表示カード -->
            <materialDesign:Card Grid.Column="0"
                                Padding="30" 
                                HorizontalAlignment="Stretch"
                                VerticalAlignment="Stretch"
                                Background="#FFA726"
                                materialDesign:ElevationAssist.Elevation="Dp6">
                <Viewbox Stretch="Uniform">
                    <StackPanel Width="400" HorizontalAlignment="Center">
                        <StackPanel Orientation="Horizontal" 
                                   HorizontalAlignment="Center"
                                   Margin="0,0,0,5">
                            <materialDesign:PackIcon Kind="TrophyVariant" 
                                                    Width="36" 
                                                    Height="36"
                                                    Foreground="White"
                                                    VerticalAlignment="Center"
                                                    Margin="0,0,15,0"/>

                            <TextBlock Text="LEVEL"
                                      FontSize="26"
                                      FontWeight="Medium"
                                      Foreground="White"
                                      Opacity="0.9"
                                      VerticalAlignment="Center"/>
                        </StackPanel>

                        <TextBlock x:Name="LevelText"
                                  Text="Level 5"
                                  FontSize="40"
                                  FontWeight="Bold"
                                  Foreground="White"
                                  HorizontalAlignment="Center"
                                  Margin="0,10,0,5"/>

                        <TextBlock x:Name="LevelProgressText"
                                  Text="レベルUPまで 3回"
                                  FontSize="24"
                                  Foreground="White"
                                  Opacity="0.85"
                                  HorizontalAlignment="Center"/>
                    </StackPanel>
                </Viewbox>
            </materialDesign:Card>

            <!-- 残り時間表示カード -->
            <materialDesign:Card Grid.Column="2"
                                Padding="30" 
                                HorizontalAlignment="Stretch"
                                VerticalAlignment="Stretch"
                                materialDesign:ElevationAssist.Elevation="Dp6">
                <Viewbox Stretch="Uniform">
                    <StackPanel Width="400" HorizontalAlignment="Center">
                        <StackPanel Orientation="Horizontal"
                                   HorizontalAlignment="Center"
                                   Margin="0,0,0,5">
                            <materialDesign:PackIcon Kind="ClockOutline" 
                                                    Width="30" 
                                                    Height="30"
                                                    Foreground="#546E7A"
                                                    VerticalAlignment="Center"
                                                    Margin="0,0,12,0"/>

                            <TextBlock Text="残り時間"
                                      FontSize="26"
                                      Foreground="#546E7A"
                                      FontWeight="Medium"
                                      VerticalAlignment="Center"/>
                        </StackPanel>

                        <TextBlock x:Name="RemainingTimeText"
                                  Text="01:30:45"
                                  FontSize="56"
                                  FontWeight="Bold"
                                  Foreground="#263238"
                                  HorizontalAlignment="Center"
                                  Margin="0,10,0,0"
                                  FontFamily="Consolas"/>
                    </StackPanel>
                </Viewbox>
            </materialDesign:Card>
        </Grid>

        <!-- 下部スペース -->
        <Grid Grid.Row="3"/>
    </Grid>
</Page>