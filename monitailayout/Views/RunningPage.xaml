<Page x:Class="monitailayout.Views.RunningPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
      Background="#ECF0F1"
      Title="実行中">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- メインコンテンツ -->
        <StackPanel VerticalAlignment="Center" 
                   HorizontalAlignment="Center"
                   MaxWidth="600">

            <!-- 目標表示カード -->
            <materialDesign:Card Padding="40" 
                                Margin="0,0,0,30"
                                materialDesign:ElevationAssist.Elevation="Dp8">
                <StackPanel>
                    <TextBlock Text="目標"
                              FontSize="16"
                              Foreground="#00897B"
                              HorizontalAlignment="Center"
                              Margin="0,0,0,15"/>

                    <TextBlock x:Name="GoalText"
                              Text="レポートを完成させる"
                              FontSize="28"
                              FontWeight="Bold"
                              TextWrapping="Wrap"
                              TextAlignment="Center"
                              Foreground="#263238"/>
                </StackPanel>
            </materialDesign:Card>

            <!-- 残り時間表示 -->
            <materialDesign:Card Padding="50" 
                                Margin="0,0,0,30"
                                Background="#00897B"
                                materialDesign:ElevationAssist.Elevation="Dp8">
                <StackPanel>
                    <TextBlock Text="残り時間"
                              FontSize="18"
                              Foreground="White"
                              Opacity="0.9"
                              HorizontalAlignment="Center"
                              Margin="0,0,0,10"/>

                    <TextBlock x:Name="RemainingTimeText"
                              Text="01:30:45"
                              FontSize="72"
                              FontWeight="Bold"
                              Foreground="White"
                              HorizontalAlignment="Center"
                              Margin="0,0,0,10"/>

                    <TextBlock x:Name="RemainingDetailText"
                              Text="0日 1時間 30分 45秒"
                              FontSize="16"
                              Foreground="White"
                              Opacity="0.8"
                              HorizontalAlignment="Center"/>
                </StackPanel>
            </materialDesign:Card>

            <!-- レベル表示カード -->
            <materialDesign:Card Padding="30" 
                                Margin="0,0,0,30"
                                Background="#FFA726"
                                materialDesign:ElevationAssist.Elevation="Dp4">
                <StackPanel Orientation="Horizontal" 
                           HorizontalAlignment="Center">
                    <materialDesign:PackIcon Kind="TrophyVariant" 
                                            Width="32" 
                                            Height="32"
                                            Foreground="White"
                                            VerticalAlignment="Center"
                                            Margin="0,0,15,0"/>

                    <TextBlock x:Name="LevelText"
                              Text="Level 5 - レベルUPまで 3回"
                              FontSize="22"
                              FontWeight="Bold"
                              Foreground="White"
                              VerticalAlignment="Center"/>
                </StackPanel>
            </materialDesign:Card>

            <!-- コントロールボタン -->
            <StackPanel Orientation="Horizontal" 
                       HorizontalAlignment="Center">
                <Button x:Name="PauseButton"
                       Content="一時停止"
                       Style="{StaticResource MaterialDesignRaisedButton}"
                       Width="140"
                       Height="50"
                       FontSize="16"
                       Margin="10"
                       Background="#FFA726"
                       BorderBrush="#FFA726"
                       Click="PauseButton_Click"/>

                <Button x:Name="StopButton"
                       Content="中止"
                       Style="{StaticResource MaterialDesignOutlinedButton}"
                       Width="140"
                       Height="50"
                       FontSize="16"
                       Margin="10"
                       BorderBrush="#E53935"
                       Foreground="#E53935"
                       Click="StopButton_Click"/>
            </StackPanel>
        </StackPanel>
    </Grid>
</Page>