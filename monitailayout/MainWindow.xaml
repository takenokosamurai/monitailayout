<Window x:Class="monitailayout.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
        Title="MonitAI" 
        Height="600" 
        Width="1000"
        WindowStartupLocation="CenterScreen"
        Background="{DynamicResource MaterialDesignPaper}"
        TextElement.Foreground="{DynamicResource MaterialDesignBody}"
        TextElement.FontWeight="Regular"
        TextElement.FontSize="14"
        FontFamily="{DynamicResource MaterialDesignFont}">

    <Window.Resources>
        <!-- ナビゲーションボタンのスタイル -->
        <Style x:Key="NavigationButtonStyle" TargetType="Button" BasedOn="{StaticResource MaterialDesignFlatButton}">
            <Setter Property="HorizontalContentAlignment" Value="Left"/>
            <Setter Property="Padding" Value="15"/>
            <Setter Property="FontSize" Value="16"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="Height" Value="50"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#34495E"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <!-- 選択されたボタンのスタイル -->
        <Style x:Key="SelectedNavigationButtonStyle" TargetType="Button" BasedOn="{StaticResource NavigationButtonStyle}">
            <Setter Property="Background" Value="#34495E"/>
        </Style>
    </Window.Resources>

    <materialDesign:DialogHost Identifier="RootDialog">
        <Grid>
            <Grid.ColumnDefinitions>
                <!-- サイドバーの幅（アニメーションで変更） -->
                <ColumnDefinition x:Name="SidebarColumn" Width="240"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <!-- サイドバー -->
            <materialDesign:Card Grid.Column="0" 
                                UniformCornerRadius="0"
                                materialDesign:ElevationAssist.Elevation="Dp8">
                <Grid Background="#2C3E50">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="85"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>

                    <!-- ヘッダー部分 - メニューボタン -->
                    <Button x:Name="MenuButton"
                            Grid.Row="0"
                            Style="{StaticResource MaterialDesignIconButton}"
                            HorizontalAlignment="Left"
                            VerticalAlignment="Top"
                            Margin="10,20,0,0"
                            Width="48"
                            Height="48"
                            Click="MenuButton_Click">
                        <Button.ToolTip>
                            <ToolTip x:Name="MenuButtonToolTip" Content="メニューを閉じる"/>
                        </Button.ToolTip>
                        <!-- アイコン変形のためのグリッド -->
                        <Grid Width="24" Height="24">
                            <!-- ハンバーガーアイコン（3本線） -->
                            <Viewbox x:Name="HamburgerIcon" Width="24" Height="24" Opacity="0">
                                <Canvas Width="24" Height="24">
                                    <Rectangle Fill="White" Width="20" Height="2" Canvas.Left="2" Canvas.Top="6"/>
                                    <Rectangle Fill="White" Width="20" Height="2" Canvas.Left="2" Canvas.Top="11"/>
                                    <Rectangle Fill="White" Width="20" Height="2" Canvas.Left="2" Canvas.Top="16"/>
                                </Canvas>
                            </Viewbox>
                            <!-- 閉じるアイコン（×） -->
                            <materialDesign:PackIcon x:Name="CloseIcon" 
                                                    Kind="Close" 
                                                    Width="24" 
                                                    Height="24" 
                                                    Foreground="White"
                                                    Opacity="1"
                                                    HorizontalAlignment="Center"
                                                    VerticalAlignment="Bottom"/>
                        </Grid>
                    </Button>

                    <!-- ナビゲーションメニュー -->
                    <StackPanel Grid.Row="1" Margin="0,20,0,0">
                        <!-- ホームボタン -->
                        <Button x:Name="HomeButton"
                                Style="{StaticResource SelectedNavigationButtonStyle}"
                                Click="NavigationButton_Click"
                                Tag="Home">
                            <Button.ToolTip>
                                <ToolTip x:Name="HomeButtonToolTip" Content="ホーム"/>
                            </Button.ToolTip>
                            <Grid>
                                <StackPanel Orientation="Horizontal">
                                    <materialDesign:PackIcon Kind="Home" 
                                                            Width="20" 
                                                            Height="20" 
                                                            VerticalAlignment="Center"
                                                            Margin="10,0,10,0"/>
                                    <TextBlock x:Name="HomeText" 
                                              Text="ホーム" 
                                              VerticalAlignment="Center"/>
                                </StackPanel>
                            </Grid>
                        </Button>

                        <!-- スケジュールボタン -->
                        <Button x:Name="ScheduleButton"
                                Style="{StaticResource NavigationButtonStyle}"
                                Click="NavigationButton_Click"
                                Tag="Schedule">
                            <Button.ToolTip>
                                <ToolTip x:Name="ScheduleButtonToolTip" Content="スケジュール"/>
                            </Button.ToolTip>
                            <Grid>
                                <StackPanel Orientation="Horizontal">
                                    <materialDesign:PackIcon Kind="Calendar" 
                                                            Width="20" 
                                                            Height="20" 
                                                            VerticalAlignment="Center"
                                                            Margin="10,0,10,0"/>
                                    <TextBlock x:Name="ScheduleText" 
                                              Text="スケジュール" 
                                              VerticalAlignment="Center"/>
                                </StackPanel>
                            </Grid>
                        </Button>

                        <!-- レポートボタン -->
                        <Button x:Name="ReportButton"
                                Style="{StaticResource NavigationButtonStyle}"
                                Click="NavigationButton_Click"
                                Tag="Report">
                            <Button.ToolTip>
                                <ToolTip x:Name="ReportButtonToolTip" Content="レポート"/>
                            </Button.ToolTip>
                            <Grid>
                                <StackPanel Orientation="Horizontal">
                                    <materialDesign:PackIcon Kind="FileDocument" 
                                                            Width="20" 
                                                            Height="20" 
                                                            VerticalAlignment="Center"
                                                            Margin="10,0,10,0"/>
                                    <TextBlock x:Name="ReportText" 
                                              Text="レポート" 
                                              VerticalAlignment="Center"/>
                                </StackPanel>
                            </Grid>
                        </Button>

                        <!-- 履歴ボタン -->
                        <Button x:Name="HistoryButton"
                                Style="{StaticResource NavigationButtonStyle}"
                                Click="NavigationButton_Click"
                                Tag="History">
                            <Button.ToolTip>
                                <ToolTip x:Name="HistoryButtonToolTip" Content="履歴"/>
                            </Button.ToolTip>
                            <Grid>
                                <StackPanel Orientation="Horizontal">
                                    <materialDesign:PackIcon Kind="History" 
                                                            Width="20" 
                                                            Height="20" 
                                                            VerticalAlignment="Center"
                                                            Margin="10,0,10,0"/>
                                    <TextBlock x:Name="HistoryText" 
                                              Text="履歴" 
                                              VerticalAlignment="Center"/>
                                </StackPanel>
                            </Grid>
                        </Button>

                        <!-- 設定ボタン -->
                        <Button x:Name="SettingsButton"
                                Style="{StaticResource NavigationButtonStyle}"
                                Click="NavigationButton_Click"
                                Tag="Settings">
                            <Button.ToolTip>
                                <ToolTip x:Name="SettingsButtonToolTip" Content="設定"/>
                            </Button.ToolTip>
                            <Grid>
                                <StackPanel Orientation="Horizontal">
                                    <materialDesign:PackIcon Kind="Settings" 
                                                            Width="20" 
                                                            Height="20" 
                                                            VerticalAlignment="Center"
                                                            Margin="10,0,10,0"/>
                                    <TextBlock x:Name="SettingsText" 
                                              Text="設定" 
                                              VerticalAlignment="Center"/>
                                </StackPanel>
                            </Grid>
                        </Button>

                        <!-- ヘルプボタン -->
                        <Button x:Name="HelpButton"
                                Style="{StaticResource NavigationButtonStyle}"
                                Click="NavigationButton_Click"
                                Tag="Help">
                            <Button.ToolTip>
                                <ToolTip x:Name="HelpButtonToolTip" Content="ヘルプ"/>
                            </Button.ToolTip>
                            <Grid>
                                <StackPanel Orientation="Horizontal">
                                    <materialDesign:PackIcon Kind="HelpCircle" 
                                                            Width="20" 
                                                            Height="20" 
                                                            VerticalAlignment="Center"
                                                            Margin="10,0,10,0"/>
                                    <TextBlock x:Name="HelpText" 
                                              Text="ヘルプ" 
                                              VerticalAlignment="Center"/>
                                </StackPanel>
                            </Grid>
                        </Button>
                    </StackPanel>
                </Grid>
            </materialDesign:Card>

            <!-- メインコンテンツエリア -->
            <Grid Grid.Column="1">
                <Grid.RowDefinitions>
                    <RowDefinition Height="42"/>
                    <RowDefinition/>
                </Grid.RowDefinitions>

                <!-- トップバー -->
                <materialDesign:ColorZone Grid.Row="0" 
                                         Mode="PrimaryMid"
                                         materialDesign:ElevationAssist.Elevation="Dp4" Height="40">
                    <Grid Background="#3E5771">
                        <TextBlock Text="MonitAI"
                                  FontSize="32"
                                  FontWeight="Bold"
                                  Foreground="White"
                                  HorizontalAlignment="Center"
                                  VerticalAlignment="Center"/>
                    </Grid>
                </materialDesign:ColorZone>

                <!-- コンテンツエリア（Frame を使用） -->
                <Frame x:Name="MainFrame"
                       Grid.Row="1"
                       NavigationUIVisibility="Hidden"
                       Background="#ECF0F1" />
            </Grid>
        </Grid>
    </materialDesign:DialogHost>
</Window>